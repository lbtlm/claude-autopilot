[user]
	# 请根据实际情况修改
	name = Your Name
	email = your.email@example.com

[core]
	editor = code --wait
	autocrlf = input  # macOS/Linux使用input，Windows使用true
	quotepath = false
	ignorecase = false
	precomposeUnicode = true

[init]
	defaultBranch = main

[pull]
	rebase = false

[push]
	default = simple
	autoSetupRemote = true

[fetch]
	prune = true

[diff]
	tool = vscode

[difftool "vscode"]
	cmd = code --wait --diff $LOCAL $REMOTE

[merge]
	tool = vscode

[mergetool "vscode"]
	cmd = code --wait $MERGED

[color]
	ui = auto
	branch = auto
	diff = auto
	status = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

# Git别名
[alias]
	# 基础操作
	st = status
	ci = commit
	co = checkout
	br = branch
	cp = cherry-pick
	
	# 日志查看
	lg = log --oneline --decorate --graph
	lga = log --oneline --decorate --graph --all
	ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
	ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
	
	# 差异查看
	d = diff
	dc = diff --cached
	dt = difftool
	
	# 状态查看
	s = status -s
	sb = status -sb
	
	# 分支操作
	bd = branch -d
	bD = branch -D
	ba = branch -a
	br = branch -r
	
	# 远程操作
	pl = pull
	ps = push
	pso = push origin
	psu = push -u origin
	
	# 提交操作
	cm = commit -m
	ca = commit -a
	cam = commit -am
	amend = commit --amend
	
	# 重置操作
	unstage = reset HEAD --
	last = log -1 HEAD
	visual = !gitk
	
	# 清理操作
	cleanup = "!git branch --merged | grep -v '\\*\\|main\\|master\\|develop' | xargs -n 1 git branch -d"
	
	# 工作流操作
	save = !git add -A && git commit -m 'SAVEPOINT'
	wip = !git add -u && git commit -m "WIP"
	undo = reset HEAD~1 --mixed
	wipe = !git add -A && git commit -qm 'WIPE SAVEPOINT' && git reset HEAD~1 --hard
	
	# 查找操作
	find = "!git ls-files | grep -i"
	grep = grep -Ii
	
	# 统计操作
	count = shortlog -sn
	contributors = shortlog --summary --numbered

[commit]
	template = ~/.gitmessage
	gpgsign = false

[tag]
	gpgsign = false

[help]
	autocorrect = 1

[rerere]
	enabled = true

[credential]
	helper = osxkeychain  # macOS使用osxkeychain，Windows使用manager

# URL重写（可选，用于企业环境）
# [url "https://github.com/"]
# 	insteadOf = git://github.com/

# 子模块配置
[submodule]
	recurse = true

# 文件大小限制
[core]
	bigFileThreshold = 100m

# 性能配置
[core]
	preloadindex = true
	fscache = true

# 安全配置
[transfer]
	fsckobjects = true
[fetch]
	fsckobjects = true
[receive]
	fsckObjects = true

# GitHub特定配置
[github]
	user = your-username  # 请修改为实际用户名

# 包含本地私有配置
[include]
	path = ~/.gitconfig.local