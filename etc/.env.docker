# Docker部署环境变量配置
# 生产环境使用

# 应用配置
APP_NAME=global_rules
APP_ENV=production
APP_DEBUG=false
APP_URL=https://yourdomain.com

# 数据库配置（根据需要修改）
DATABASE_URL=postgresql://user:password@db:5432/global_rules
DB_HOST=db
DB_PORT=5432
DB_DATABASE=global_rules
DB_USERNAME=user
DB_PASSWORD=password

# Redis配置
REDIS_HOST=redis
REDIS_PORT=6379

# JWT配置
JWT_SECRET=your-production-jwt-secret-here
JWT_EXPIRY=24h

# API配置
API_KEY=your-production-api-key
API_URL=https://api.yourdomain.com

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=json

# 邮件配置
MAIL_HOST=smtp.yourdomain.com
MAIL_PORT=587
MAIL_USERNAME=noreply@yourdomain.com
MAIL_PASSWORD=your-mail-password
